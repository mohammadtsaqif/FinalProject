<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GetstartedCleaning" android:background="#6C3BCA">

    <Button
            android:text="Get Started"
            android:layout_width="292dp"
            android:layout_height="65dp" android:id="@+id/buttonStartGrocery"
            app:cornerRadius="50dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp" android:textStyle="bold" android:backgroundTint="#FDFCFC"
            android:onClick="openCleaningPage" app:layout_constraintHorizontal_bias="0.495"
            android:textColor="#000000" android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/comment"/>
    <ImageView
            android:layout_width="313dp"
            android:layout_height="296dp" app:srcCompat="@drawable/cleaning_car" android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="68dp" app:layout_constraintEnd_toEndOf="parent"
    />
    <ImageView
            android:layout_width="96dp"
            android:layout_height="101dp" app:srcCompat="@drawable/spray" android:id="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="@+id/imageView2"
            android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.147"/>
    <TextView
            android:text="Washing"
            android:layout_width="141dp"
            android:layout_height="58dp" android:id="@+id/washing"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="@+id/imageView2" android:layout_marginTop="40dp"
            app:layout_constraintHorizontal_bias="0.0" android:textColor="#FFFFFF" android:textSize="34sp"
            android:textStyle="bold" android:fontFamily="@font/carter_one"/>
    <TextView
            android:layout_width="231dp"
            android:layout_height="59dp" android:id="@+id/comment"
            app:layout_constraintTop_toBottomOf="@+id/washing" app:layout_constraintEnd_toEndOf="@+id/washing"
            app:layout_constraintStart_toStartOf="@+id/imageView6"
            android:text="We provide any type of cleaning service you want. You can come to us without any hesitation."
            android:gravity="center"
            android:textColor="#C6C2C2" android:textSize="12sp" app:layout_constraintHorizontal_bias="1.0"
            android:textStyle="bold"
            android:fontFamily="@font/archivo" android:layout_marginTop="40dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp" tools:layout_editor_absoluteY="0dp"
            app:layout_constraintEnd_toEndOf="parent">
        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp" app:srcCompat="@drawable/upper_background"
                android:id="@+id/imageView12" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>