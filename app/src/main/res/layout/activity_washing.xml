<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Washing" android:orientation="vertical">

    <TextView
            android:text="Washing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/titleWashing" android:textAlignment="center"
            android:textStyle="normal|bold|italic" android:textSize="34sp" android:textColor="#000000"/>
    <TextView
            android:text="Please fill in the criteria accordingly :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/Criterias" android:textSize="20sp"
            android:layout_marginTop="15dp" android:paddingTop="10dp" android:paddingBottom="10dp"
            android:textColor="#000000"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="1. Load"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/loadWashing" android:textSize="24sp"
                android:background="#000000" android:textColor="#ffffff" android:layout_marginTop="5dp"/>
        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/LoadWashing">
            <RadioButton
                    android:text="2 KG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btn2kg"/>
            <RadioButton
                    android:text="5 KG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btn5kg"/>
            <RadioButton
                    android:text="10 KG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btn10kg"/>
        </RadioGroup>
        <TextView
                android:text="2. Temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tempWashing" android:textSize="24sp"
                android:background="#000000" android:textColor="#ffffff" android:layout_marginTop="5dp"/>
        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/TempWashing">
            <RadioButton
                    android:text="Cold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnWarm"/>
            <RadioButton
                    android:text="Warm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnHot"/>
            <RadioButton
                    android:text="Hot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnVeryHot"/>
        </RadioGroup>
        <TextView
                android:text="3. Duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/durationWashing" android:textSize="24sp"
                android:background="#000000" android:textColor="#ffffff" android:layout_marginTop="5dp"/>
        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/DurationWashing">
            <RadioButton
                    android:text="45 minutes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btn45mins"/>
            <RadioButton
                    android:text="60 minutes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btn60mins"/>
        </RadioGroup>
        <Button
                android:text="Next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnNext" android:textAlignment="viewEnd"
                android:layout_marginStart="325dp" android:layout_marginEnd="10dp"
                android:onClick="onClickWashingNext"/>
    </LinearLayout>
</LinearLayout>