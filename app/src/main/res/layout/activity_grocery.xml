<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Grocery"
        android:background="@color/groceryBg">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ucare Grocery Shopper Service"
            android:textColor="@color/groceryBg2"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.975"
            android:id="@+id/textView"/>
    <Button
            android:text=" GET STARTED "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonStartGrocery"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="228dp" app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintVertical_bias="0.53" android:backgroundTint="@color/groceryBg2"/>
    <ImageView
            android:layout_width="182dp"
            android:layout_height="194dp" app:srcCompat="@drawable/grocerylogo" android:id="@+id/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintBottom_toTopOf="@+id/grocerytitle"
            android:backgroundTint="@color/groceryBg"/>
    <ImageView
            android:layout_width="394dp"
            android:layout_height="29dp" app:srcCompat="@drawable/img_2" android:id="@+id/grocerytitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.398"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.47"/>
    <ImageView
            android:layout_width="240dp"
            android:layout_height="9dp" app:srcCompat="@drawable/img_3" android:id="@+id/groceryslogan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.018"
            app:layout_constraintTop_toBottomOf="@+id/grocerytitle"/>

</androidx.constraintlayout.widget.ConstraintLayout>