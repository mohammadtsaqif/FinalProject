<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/backgroundhome"
        android:contentDescription="@string/_3" android:background="#00A19B" android:paddingLeft="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="625dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.111"
            android:minHeight="48dp" app:layout_constraintTop_toBottomOf="@+id/Hello"
            app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
                android:layout_width="414dp"
                android:layout_height="580dp" app:srcCompat="@drawable/bottom_background"
                android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="@string/name" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
                android:layout_width="105dp"
                android:layout_height="115dp" android:id="@+id/buttoncleaning"
                app:icon="@drawable/cleaning" app:cornerRadius="60dp"
                app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="36dp"
                app:iconSize="75dp" android:backgroundTint="#1B98E0" android:layout_marginStart="28dp"/>
        <Button
                android:layout_width="105dp"
                android:layout_height="115dp" android:id="@+id/buttonehailing"
                app:icon="@drawable/ehailing" app:cornerRadius="60dp"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                android:layout_marginTop="36dp"
                app:iconSize="75dp" android:backgroundTint="#F1A208"
                app:iconGravity="top"
                app:layout_constraintStart_toEndOf="@+id/buttoncleaning" android:layout_marginStart="16dp"/>
        <Button
                android:layout_width="105dp"
                android:layout_height="115dp" android:id="@+id/buttongrocery"
                app:icon="@drawable/grocery" app:cornerRadius="60dp"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                android:layout_marginTop="36dp"
                app:iconSize="75dp" android:backgroundTint="#2BA84A"
                app:layout_constraintStart_toEndOf="@+id/buttonehailing" android:layout_marginStart="20dp"/>
        <Button
                android:layout_width="105dp"
                android:layout_height="115dp" android:id="@+id/buttonlaundry"
                app:icon="@drawable/laundry" app:cornerRadius="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:iconSize="75dp" android:backgroundTint="#6B818C" android:layout_marginStart="92dp"
                app:layout_constraintTop_toBottomOf="@+id/textView9" android:layout_marginTop="8dp"/>
        <Button
                android:layout_width="105dp"
                android:layout_height="115dp" android:id="@+id/buttonfooddelivery"
                app:icon="@drawable/fooddelivery" app:cornerRadius="60dp"
                app:iconSize="75dp" android:backgroundTint="#EF2D56"
                app:layout_constraintTop_toBottomOf="@+id/textView9" android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/buttonlaundry"
                app:layout_constraintEnd_toEndOf="@+id/imageView" app:layout_constraintHorizontal_bias="0.192"/>
        <TextView
                android:text="Cleaning Room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView6"
                android:textColor="#000000"
                android:textStyle="bold" android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/buttoncleaning"
                app:layout_constraintStart_toStartOf="@+id/buttoncleaning"
                app:layout_constraintEnd_toEndOf="@+id/buttoncleaning"/>
        <TextView
                android:text="E-Hailing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/buttonehailing"
                app:layout_constraintStart_toStartOf="@+id/buttonehailing"
                app:layout_constraintEnd_toEndOf="@+id/buttonehailing" android:textColor="#000000"
                android:textStyle="bold" android:textSize="16sp"
                app:layout_constraintHorizontal_bias="0.461"/>
        <TextView
                android:text="Grocery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView11"
                app:layout_constraintTop_toBottomOf="@+id/buttongrocery"
                app:layout_constraintStart_toStartOf="@+id/buttongrocery"
                app:layout_constraintEnd_toEndOf="@+id/buttongrocery" android:textColor="#000000"
                android:textStyle="bold" android:textSize="16sp"
                app:layout_constraintHorizontal_bias="0.435"/>
        <TextView
                android:text="Laundry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView12"
                app:layout_constraintTop_toBottomOf="@+id/buttonlaundry"
                app:layout_constraintStart_toStartOf="@+id/buttonlaundry"
                app:layout_constraintEnd_toEndOf="@+id/buttonlaundry" android:textColor="#000000"
                android:textStyle="bold" android:textSize="16sp"
                app:layout_constraintHorizontal_bias="0.347"/>
        <TextView
                android:text="Food Delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView13"
                app:layout_constraintTop_toBottomOf="@+id/buttonfooddelivery"
                android:textColor="#000000"
                android:textStyle="bold" android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/buttonfooddelivery"
                app:layout_constraintStart_toStartOf="@+id/buttonfooddelivery"
                app:layout_constraintHorizontal_bias="0.0"/>
        <ImageView
                android:layout_width="164dp"
                android:layout_height="140dp" app:srcCompat="@drawable/women" android:id="@+id/imageView19"
                app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="200dp"/>
        <TextView
                android:text="Where care meets convenience. We are ready to provide you."
                android:layout_width="200dp"
                android:layout_height="60dp" android:id="@+id/textView19"
                app:layout_constraintTop_toBottomOf="@+id/textView13" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.544" android:textColor="#000000" android:textSize="12sp"
                android:background="?android:attr/fastScrollPreviewBackgroundLeft" android:textStyle="bold"
                android:gravity="center" android:layout_marginTop="52dp"/>
        <ImageView
                android:layout_width="414dp"
                android:layout_height="67dp" app:srcCompat="@drawable/curve_bottom_petronas"
                android:id="@+id/imageView21" app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/imageView19" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0"/>
        <Button
                android:layout_width="40dp"
                android:layout_height="39dp" android:id="@+id/button8"
                app:layout_constraintTop_toTopOf="@+id/imageView21" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageView21" app:icon="@drawable/profileee" app:iconSize="35dp"
                android:paddingLeft="0dp" android:paddingRight="0dp" android:paddingTop="0dp"
                android:paddingBottom="0dp" android:backgroundTint="#00A19B" android:gravity="center"
                app:iconGravity="textTop" android:onClick="openProfileAccountPage"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hello_username"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="34sp"
            app:layout_constraintStart_toEndOf="@+id/Hello"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="44dp" app:layout_constraintHorizontal_bias="0.01"/>
    <TextView
            android:text="@string/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Hello"
            android:textSize="34sp" android:textStyle="bold" android:textColor="#FAFAFA"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="44dp" android:layout_marginStart="60dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>


